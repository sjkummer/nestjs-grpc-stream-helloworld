{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start:prod:server": "node dist/main.js --mode server",
    "start:prod:client": "node dist/main.js --mode client",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:server": "ts-node -r tsconfig-paths/register src/main.ts --mode server",
    "start:client": "ts-node -r tsconfig-paths/register src/main.ts --mode client",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:dev:server": "concurrently --handle-input \"wait-on dist/main.js && nodemon --mode server\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:debug:server": "nodemon --config nodemon-debug.json --mode server",
    "start:debug:client": "nodemon --config nodemon-debug.json --mode client",
    "start:debug:webstorm": "node %NODE_DEBUG_OPTION% -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "generate:proto": "npx ts-node src/proto.interfaces.generator.ts",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.5.1",
    "@improbable-eng/grpc-web": "^0.11.0",
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/microservices": "^6.7.2",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/serve-static": "^1.0.1",
    "@nestjs/typeorm": "^6.2.0",
    "@sentry/node": "^5.5.0",
    "@types/dotenv": "^6.1.1",
    "@types/systeminformation": "^3.23.1",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.0.0",
    "google-protobuf": "^3.9.1",
    "grpc": "^1.22.2",
    "janus-gateway-js": "sjkummer/janus-gateway-js#master",
    "joi": "^14.3.1",
    "lodash": "^4.17.15",
    "luxon": "^1.17.2",
    "moment": "^2.24.0",
    "mongodb": "^3.2.7",
    "nest-logger": "^2.1.0",
    "onvif": "^0.6.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "systeminformation": "^4.14.4",
    "ts-protoc-gen": "^0.10.1-pre.e8c15bc",
    "typeorm": "^0.2.18",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/joi": "^14.3.3",
    "@types/node": "^10.1",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.5",
    "concurrently": "^4.1.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "proto-parse": "0.0.5",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "^3.4.3",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
